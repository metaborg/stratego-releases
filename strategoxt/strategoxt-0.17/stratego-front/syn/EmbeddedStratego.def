    [t][0-9\']*      -> TermMetaVar
    "t:"Id           -> TermMetaVar
    [t][0-9\']*  "*" -> TermListMetaVar
    "ts"[0-9\']*     -> TermListMetaVar

    TermMetaVar      -> MetaVar
    TermListMetaVar  -> MetaVar

